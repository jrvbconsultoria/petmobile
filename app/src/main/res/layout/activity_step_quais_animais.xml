<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jrvb.petmobile.StepQuaisAnimais">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"

            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSoCachorro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/white"
                android:onClick="clickSoCachorro"
                android:text="Cachorro" />

            <Button
                android:id="@+id/btnSoCarro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/holo_green_light"
                android:onClick="clickSoGato"
                android:text="Gato" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCachorroEGato"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/holo_blue_light"
                android:text="Cachorro e Gato"
                android:onClick="clickCachorroEGato"/>

            <Button
                android:id="@+id/btnOutro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@android:color/holo_red_light"
                android:text="Outro" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
